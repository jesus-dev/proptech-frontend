# Cursor Rules for Java Project
# This file helps Cursor understand the project structure

# Java project configuration
java.project.sourcePaths = ["src/main/java", "src/main/resources"]
java.project.outputPath = "target/classes"

# Maven configuration
maven.enabled = true
maven.downloadSources = true
maven.downloadJavadoc = true

# Build configuration
build.auto = true
build.maven = true

# Language server configuration
java.languageServer = "redhat.java"
java.completion = true
java.signatureHelp = true

# Project recognition
project.type = "java-maven"
project.buildTool = "maven"
project.javaVersion = "21"
