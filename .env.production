# âœ… Optimizado para Cloudflare + TÃºnel

# API Configuration
NEXT_PUBLIC_API_URL=https://api.onproptech.com
NEXT_PUBLIC_UPLOADS_URL=https://api.onproptech.com/uploads
NEXT_PUBLIC_IMAGE_BASE_URL=https://api.onproptech.com

# Environment
NODE_ENV=production

# Cloudflare + TÃºnel Configuration
NEXT_PUBLIC_CLOUDFLARE_ENABLED=true
NEXT_PUBLIC_HTTPS_ENABLED=true
NEXT_PUBLIC_TUNNEL_ENABLED=true

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Security (manejado por Cloudflare)
NEXT_PUBLIC_ENABLE_HTTPS_REDIRECT=false
NEXT_PUBLIC_DOMAIN=onproptech.com

# Performance (optimizado para Cloudflare)
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_ENABLE_CDN=true

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# External Services
NEXT_PUBLIC_TINYMCE_API_KEY=
NEXT_PUBLIC_MAPBOX_TOKEN=

# Database
DATABASE_URL=

# JWT Secrets
JWT_SECRET=
NEXT_PUBLIC_JWT_EXPIRES_IN=7d

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx

# Cache Configuration (optimizado para Cloudflare)
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_STATIC_CACHE_TTL=86400
NEXT_PUBLIC_CLOUDFLARE_CACHE_TTL=604800

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_UPLOAD_RATE_LIMIT=10

# Debug
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_VERBOSE_LOGGING=false
